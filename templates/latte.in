  TOINITTEMP5= 1
  THERMPER= 500
  THERMRUN= 50000
  NVTON= 0 NPTON= 0 AVEPER= 1000  FRICTION= 1000.0 SEED= 54
  PTARGET= 0.0 NPTTYPE= ISO
  SHOCKON= 0
  SHOCKSTART= 100000
  SHOCKDIR= 1
  UPARTICLE= 500.0 USHOCK= -4590.0 C0= 1300.0
  MDADAPT= 0
  GETHUG= 0 E0= -795.725  V0= 896.984864 P0= 0.083149
}


#Pulay Mixer. This options are available when LATTE is compiled with
#PROGRESS/BML
MIXER{
   MixerType= Linear  #Will use the Pulay mixer (Linear is an other option)
   Verbose= 0
   MPulay= 5  #Number of pulay vectors/matrices
   MixCoeff= 0.05  #Coefficient for mixing charges
   MixerON= T    #This variable is equivalent to commenting the whole lines in MIXER
  
 }
 


