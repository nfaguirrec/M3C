input=$1  # example: H,H,C,F
save=$2

if [ -z  "$input" ]
then
	echo "Usage:"
	echo "   M3C.fragments atomsList [-s]"
	exit
fi

molecule.random $input > .parent.xyz

if [ "$save" = "-s" ]
then
	molecule.fragments -i .parent.xyz -s true
else
	molecule.fragments -i .parent.xyz
fi

rm .parent.xyz
