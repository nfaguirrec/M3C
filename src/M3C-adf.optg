ADF_TEMPLATE=$1
NPROCSHARED=$2

##############################
# Default options
##############################
if [ -z "$ADF_TEMPLATE" ]
then
	echo "usage: M3C-adf.optg adfTemplate [ nProcShared ]"
	echo "                                       1       "
	exit
fi

# if [ -z "`grep -i "^\s*TOTALENERGY\s*$" $ADF_TEMPLATE`" ]
# then
# 	echo "### Error ### TOTALENERGY keyword shoul be present in the ADF template ($ADF_TEMPLATE)"
# 	exit
# fi

[ -z "$NPROCSHARED" ] && NPROCSHARED=1
##############################

if [ -f "$M3C_HOME/bin/adfDriver.sh" ]
then
	source $M3C_HOME/bin/adfDriver.sh
else
	source $M3C_HOME/src/adfDriver.sh
fi

if [ -f "$M3C_HOME/bin/parallel.sh" ]
then
	source $M3C_HOME/bin/parallel.sh
else
	source $M3C_HOME/src/parallel.sh
fi

function optgeom()
{
	local iFileXYZ=$1
	local charge=$2
	local mult=$3
	
	cp $iFileXYZ ${iFileXYZ%.*}.xyz0
	optgADFTemplate $ADF_TEMPLATE $NPROCSHARED ${iFileXYZ%.*}.xyz0 $charge $mult > ${iFileXYZ%.*}.xyz
	mv ${iFileXYZ%.*}.out history.optg/ 2> /dev/null
	mv ${iFileXYZ%.*}.adf history.optg/ 2> /dev/null
	mv ${iFileXYZ%.*}.t21 history.optg/ 2> /dev/null
}

function main()
{
	local xyzFile=""
	local charge=""
	local mult=""
	
	local i=0
	local j=0
	local ij=0
	
	if [ -z "$M3C_NTHREADS" ]
	then
		M3C_NTHREADS=`cat /proc/cpuinfo | grep processor | wc -l`
	fi
	nThreads=$(( $M3C_NTHREADS/$NPROCSHARED ))
	
	if [ -d "history.optg" ]
	then
		echo "@@@ WARNING @@@ There is already a history directory (history.optg). Backup copy will be generated"
		mv history.optg history.optg.backup-`date +%Y%m%d`
	fi
	mkdir history.optg
	
	xyzFile=( `ls *.xyz` )
	charge=( `ls *.xyz | gawk 'BEGIN{FS="[.-]+"}{print $2}' | sed 's/q//g'` )
	mult=( `ls *.xyz | gawk 'BEGIN{FS="[.-]+"}{print $3}' | sed 's/m//g'` )
	
	cat /dev/null > .commands$$
	for (( i=0; i<${#xyzFile[@]}; i++ ))
	do
		echo "optgeom ${xyzFile[$i]} ${charge[$i]} ${mult[$i]}" >> .commands$$
	done
	
	parallel .commands$$ $nThreads
	rm .commands$$
}

main $*

